{
    "extends":"airbnb-base", 
    "parserOptions" : {
        "ecmaVersion" : 8 
    },
    "env" : {
        "node"     : true ,
        "browser"  : true ,
        "es6"      : true
    },
    "rules" : {
        "comma-dangle" : [
            "error" , "never"
        ],
        "no-unused-vars" : [
            "error" , {
                "vars" : "local" ,  "args" : "none"
            }
        ],
    },
    "globals": {"Promise": true}
}